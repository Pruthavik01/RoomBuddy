<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">LogIn</h1>
    <div class="col-6 offset-3">
        
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-lable">Username</lable>
                <input type="text" name="username" id="username" class="form-control" required>
                
            </div>

            <div class="mb-3">
                <lable for="password" class="form-lable">password</lable>
                <input type="password" name="password" id="password" class="form-control" required>
                <div class="invalid-feedback">need password</div>
            </div>

            <button class="btn btn-success">LogIn</button>
        </form>
        <div class="col-6 mt-3"><a class="text-decoration-none" href="/signup">Create New account</a></div>
    </div>
</div>