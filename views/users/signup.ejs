<% layout("/layouts/boilerplate.ejs") %>

<div class="container d-flex justify-content-center align-items-center">
  <div class="card shadow p-4 col-md-6 mt-3">
    <h1 class="text-center mb-4">Sign Up</h1>

    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" required>
        <div class="valid-feedback">Username looks good!</div>
        <div class="invalid-feedback">Need a username</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" required>
        <div class="invalid-feedback">Write a proper email!</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" required>
        <div class="invalid-feedback">Write a password</div>
      </div>

      <button class="btn btn-success w-100">Sign Up</button>
    </form>

    <div class="text-center mt-3">
      <a class="text-decoration-none" href="/login">Already have an account?</a>
    </div>
  </div>
</div>
